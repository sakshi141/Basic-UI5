<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Dialog
        title="Image Slide"
        draggable="true"
        resizable="true"
    >
        <Carousel pages="{/oSelectedItem}">
            <pages>
                <Image
                    src="{url}"
                    height="auto"
                />
            </pages>
        </Carousel>

        <endButton>
            <Button
                text="Close"
                press=".onClose"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
